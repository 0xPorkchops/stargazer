{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "cd client && npm install && npm run build"
      }
    },
    {
      "src": "server/src/*.ts",
      "use": "@vercel/node",
      "config": {
        "distDir": "server/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/server.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/client/favicon.ico"
    },
    {
      "src": "/robots.txt",
      "dest": "/client/robots.txt"
    },
    {
      "src": "/vite.svg",
      "dest": "/client/vite.svg"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
}