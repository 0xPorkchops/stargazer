{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "cd client && npm install && npm run build && cp -r build/* ../build/ && rm -rf build"
      }
    },
    {
      "src": "server/src/*.ts",
      "use": "@vercel/node",
      "config": {
        "distDir": "server/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}