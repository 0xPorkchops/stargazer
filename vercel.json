{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/vite",
      "config": {
        "root": "client"
      }
    },
    {
      "src": "server/src/*.ts",
      "use": "@vercel/node",
      "config": {
        "distDir": "server/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/server.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}