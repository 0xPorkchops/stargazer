{
    "version": 2,
    "builds": [
      {
        "src": "src/*.ts",
        "use": "@vercel/node",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "../client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "../client/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "src/server.ts"
      },
      {
        "src": "/(.*)",
        "dest": "../client/index.html"
      }
    ]
  }